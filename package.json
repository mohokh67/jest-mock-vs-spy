        "jest": "^29.5.0",
        "rimraf": "^4.4.0",
        "ts-jest": "^29.0.5",
        "tsup": "^6.6.3",
        "typescript": "^4.9.5"
    },
    "packageManager": "pnpm@7.0.0"
}
